def nums_que_comencen_per(llista_noms):
    comptador = 0
    for nom in llista_noms:
        if nom.lower().startswith('a'):
            comptador += 1
    return comptador

print("Introduce nombres y separalos por espacios")
entrada_usuario = input("Lista: ")

lista_numeros = []
for elemento in entrada_usuario.split():
    lista_numeros.append(elemento)

resultado = nums_que_comencen_per(lista_numeros)
print("Hi ha {} nombres que comencen per la lletra 'a' ".format(resultado))
